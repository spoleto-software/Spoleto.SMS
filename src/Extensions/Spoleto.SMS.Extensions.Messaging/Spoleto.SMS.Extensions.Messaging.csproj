    <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Spoleto.SMS\Spoleto.SMS.csproj" />
  </ItemGroup>

</Project>
